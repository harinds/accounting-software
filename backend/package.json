{
  "name": "accounting-backend",
  "version": "1.0.0",
  "description": "Accounting software backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "migrate": "node -r dotenv/config scripts/migrate.js",
    "migrate:rollback": "node -r dotenv/config scripts/migrate.js rollback",
    "migrate:fresh": "node -r dotenv/config scripts/migrate.js fresh"
  },
  "keywords": ["accounting", "api", "supabase"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.7",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.4.1",
    "axios": "^1.6.7",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "crypto-js": "^4.2.0",
    "bull": "^4.12.0",
    "ioredis": "^5.3.2",
    "joi": "^17.12.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.16",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcrypt": "^5.0.2",
    "@types/crypto-js": "^4.2.2",
    "@types/bull": "^4.10.0",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "supertest": "^6.3.4",
    "@types/supertest": "^6.0.2"
  }
}
